html, body
    padding 0
    margin 0
    min-height 100%
    height 100%
    width 100%
body
    font 14px "Lucida Grande", Helvetica, Arial, sans-serif
    .login-container, .login-holder
        min-height 100%
        height 100%
    .login-holder
        .logo
            height 150px
            max-width 100%
            text-align center
            img
                display inline-block
                max-height 150px
    .dashboard-container
        padding-bottom 50px
    .navbar
        .navbar-brand
            img
                height 32px
        .navbar-collapse
            ul
                list-style none
                padding 0
                margin 0
                li
                    a.dropdown-item
                        i.fa
                            display inline-block
                            margin-right 10px
    a.btn
        i.fa
            display inline-block
            margin-right 5px
    table
        tr
            td
                &.btn-cell
                    padding 5px
    .row
        .col
            .form-group
                p
                    strong
                        display inline-block
                        padding-left 10px
                        position relative
                        &:before
                            absolute top 0 left 0
                            content:":"




